<Page x:Class="DB_lab_project.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DB_lab_project"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="525"
      Title="Login">

    <Grid FlowDirection="RightToLeft">
        <Button x:Name="btn_login" Content="ورود به سامانه" HorizontalAlignment="Left" Margin="204,210,0,0" VerticalAlignment="Top" Width="120" Click="btn_login_Click"/>
        <TextBox x:Name="txb_userName" HorizontalAlignment="Left" Height="23" Margin="204,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="نام کاربری" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="235,51,0,0"/>
        <Label x:Name="label1" Content="کلمه عبور" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="235,119,0,0"/>
        <PasswordBox x:Name="pwd_password" HorizontalAlignment="Left" Margin="204,150,0,0" VerticalAlignment="Top" Width="120" Height="23"/>

    </Grid>
</Page>
